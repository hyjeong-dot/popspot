{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": [
                "./src/*"
            ],
            "@popspot/database": [
                "../../packages/database/src"
            ],
            "@popspot/types": [
                "../../packages/types/src"
            ],
            "@popspot/ui": [
                "../../packages/ui/src"
            ],
            "@popspot/utils": [
                "../../packages/utils/src"
            ]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}